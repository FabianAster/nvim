{
  "explorer.width": 30,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
 },
 "languageserver": {
     "haskell": {
             "command": "hie-wrapper",
                 "args": ["--lsp"],
                 "rootPatterns": [
                           "*.cabal",
                                 "stack.yaml",
                                       "cabal.project",
                                             "package.yaml"
                                                 
                 ],
                 "filetypes": [
                           "hs",
                                 "lhs",
                                       "haskell"
                                           
                 ],
                 "initializationOptions": {
                     "haskell": {
                     }
                         
                 }
                   
     }
     
 }
}

